{
  "name": "todo-app-server",
  "private": true,
  "version": "0.0.1",
  "description": "The RESTful server for todo app",
  "main": "server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "npx tsc",
    "start": "node dist/src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint",
    "format": "prettier . --write",
    "db:mc": "db-migrate create",
    "db:mu": "db-migrate up",
    "db:md": "db-migrate down",
    "db:reset": "db-migrate reset",
    "db:schema": "./scripts/run_schemats.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.25",
    "@types/pg": "^8.11.2",
    "@types/supertest": "^6.0.2",
    "@vramework/schemats": "^1.0.5",
    "concurrently": "^8.2.2",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.1.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
